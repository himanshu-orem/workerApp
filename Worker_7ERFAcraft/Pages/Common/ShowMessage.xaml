<?xml version="1.0" encoding="UTF-8"?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:adc="clr-namespace:Worker_7ERFAcraft.Repository"
              xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             x:Class="Worker_7ERFAcraft.Pages.ShowMessage">
    
    <StackLayout BackgroundColor="#323232" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand" Padding="15" Margin="0">
        <Label x:Name="msgTxt" FontSize="Small" HorizontalTextAlignment="Start" 
               HorizontalOptions="StartAndExpand" TextColor="#f5f5f5"
                   FontFamily="{x:Static adc:App_FontFamilies.BodyFont}" StyleId="{x:Static adc:App_FontFamilies.BodyFont}"/>
    </StackLayout>
</pages:PopupPage>
